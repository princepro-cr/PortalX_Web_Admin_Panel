@model IEnumerable<StudentProfile>
@{
    ViewData["Title"] = "Manage Students";
    var totalStudents = Model.Count();
    var activeStudents = Model.Count(s => s.IsActive);
}

<style>
    :root {
        --primary-blue: #4361ee;
        --secondary-purple: #7209b7;
        --bg-light: #f8f9fd;
        --glass: rgba(255, 255, 255, 0.9);
    }

    body {
        background-color: var(--bg-light);
        font-family: 'Inter', sans-serif;
    }

    /* Modern Header */
    .page-header {
        background: white;
        padding: 1.5rem 2rem;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.03);
        margin-bottom: 2rem;
    }

    .text-gradient {
        background: linear-gradient(45deg, var(--primary-blue), var(--secondary-purple));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-weight: 800;
    }

    /* Stats Grid - Now more compact and colorful */
    .mini-stat-card {
        border: none;
        border-radius: 12px;
        padding: 1rem;
        transition: all 0.3s ease;
        background: white;
        border-left: 4px solid var(--primary-blue);
    }

        .mini-stat-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 15px rgba(0,0,0,0.05);
        }

    /* Search Bar Glassmorphism */
    .filter-section {
        background: var(--glass);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255,255,255,0.2);
        border-radius: 12px;
        padding: 1.25rem;
    }

    /* Table Styling */
    .main-card {
        border: none;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.04);
        overflow: hidden;
    }

    .table thead {
        background: #f1f4ff;
    }

        .table thead th {
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.75rem;
            letter-spacing: 0.5px;
            color: #5a6a85;
            border: none;
            padding: 1rem;
        }

    .student-row {
        transition: background 0.2s;
    }

        .student-row:hover {
            background-color: #fcfdff !important;
        }

    .gpa-indicator {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        display: inline-block;
        margin-right: 5px;
    }

    /* Action Buttons */
    .btn-circle {
        width: 35px;
        height: 35px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: 0.2s;
        border: none;
    }
</style>

<div class="container-fluid py-4 px-lg-5">

    <div class="page-header d-flex flex-column flex-md-row justify-content-between align-items-center">
        <div>
            <h1 class="h3 mb-1 text-gradient">Student Management</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0" style="font-size: 0.85rem;">
                    <li class="breadcrumb-item"><a href="#">HR Dashboard</a></li>
                    <li class="breadcrumb-item active">Students</li>
                </ol>
            </nav>
        </div>
        <div class="d-flex gap-3 mt-3 mt-md-0">
            <div class="text-end d-none d-lg-block me-3">
                <small class="text-muted d-block">Active Status</small>
                <span class="fw-bold text-success">@activeStudents / @totalStudents Active</span>
            </div>
            <a href="/HR/AddStudent" class="btn btn-primary rounded-pill px-4 shadow">
                <i class="fas fa-plus me-2"></i>New Registration
            </a>
        </div>
    </div>

    <div class="row mb-4 g-3">
        @foreach (var grade in new[] { "9", "10", "11", "12" })
        {
            <div class="col-6 col-md-3">
                <div class="mini-stat-card shadow-sm">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <span class="text-muted small fw-bold">GRADE @grade</span>
                            <h3 class="mb-0 fw-bold">@Model.Count(s => s.GradeLevel == grade)</h3>
                        </div>
                        <div class="bg-light rounded-circle p-2">
                            <i class="fas fa-users text-primary"></i>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="filter-section shadow-sm mb-4">
        <div class="row g-3 align-items-center">
            <div class="col-lg-5">
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0 text-muted"><i class="fas fa-search"></i></span>
                    <input type="text" class="form-control border-start-0" placeholder="Search by name, ID, or email..." id="searchInput">
                </div>
            </div>
            <div class="col-md-3 col-lg-2">
                <select class="form-select border-0 shadow-sm" id="gradeFilter">
                    <option value="">All Grades</option>
                    <option value="9">Grade 9</option>
                    <option value="10">Grade 10</option>
                    <option value="11">Grade 11</option>
                    <option value="12">Grade 12</option>
                </select>
            </div>
            <div class="col-md-3 col-lg-2">
                <select class="form-select border-0 shadow-sm" id="statusFilter">
                    <option value="">Status</option>
                    <option value="active">Active</option>
                    <option value="inactive">Inactive</option>
                </select>
            </div>
            <div class="col-md-2 col-lg-1">
                <button class="btn btn-light w-100 border shadow-sm" onclick="resetFilters()">
                    <i class="fas fa-sync-alt"></i>
                </button>
            </div>
        </div>
    </div>

    <div class="card main-card">
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table align-middle mb-0" id="studentsTable">
                        <thead>
                            <tr>
                                <th class="ps-4">Profile</th>
                                <th>Contact & Parent</th>
                                <th>Academic Info</th>
                                <th>Performance</th>
                                <th>Status</th>
                                <th class="text-end pe-4">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var student in Model)
                            {
                                <tr class="student-row" data-grade="@student.GradeLevel" data-status="@(student.IsActive ? "active" : "inactive")">
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <div class="position-relative">
                                                <img src="@student.AvatarUrl" class="rounded-3 shadow-sm me-3" style="width: 48px; height: 48px; object-fit: cover;" onerror="this.src='https://ui-avatars.com/api/?name=@student.FullName&background=random'">
                                            </div>
                                            <div>
                                                <div class="fw-bold text-dark">@student.FullName</div>
                                                <span class="badge bg-primary-subtle text-primary border-0" style="font-size: 0.7rem;">ID: @student.StudentId</span>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="small fw-semibold text-dark"><i class="far fa-envelope me-1 text-muted"></i> @student.Email</div>
                                        <div class="small text-muted"><i class="far fa-user me-1"></i> P: @student.ParentName</div>
                                    </td>
                                    <td>
                                        <div class="text-dark fw-bold small">Grade @student.GradeLevel</div>
                                        <div class="text-muted small">Class: @student.ClassId</div>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center gap-3">
                                            <div>
                                                <div class="small text-muted">GPA</div>
                                                <div class="fw-bold">
                                                    <span class="gpa-indicator @(student.GPA >= 3.5m ? "bg-success" : student.GPA >= 2.5m ? "bg-warning" : "bg-danger")"></span>
                                                    @student.GPA.ToString("0.00")
                                                </div>
                                            </div>
                                            <div class="vr mx-2" style="height: 20px;"></div>
                                            <div>
                                                <div class="small text-muted">Att.</div>
                                                <div class="fw-bold @(student.AttendancePercentage < 75 ? "text-danger" : "")">@student.AttendancePercentage%</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @if (student.IsActive)
                                        {
                                            <span class="badge rounded-pill bg-success-subtle text-success px-3">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge rounded-pill bg-danger-subtle text-danger px-3">Inactive</span>
                                        }
                                    </td>
                                    <td class="pe-4">
                                        <div class="d-flex justify-content-end gap-2">
                                            <a href="@Url.Action("StudentDetails", "HR", new { id = student.Id })" class="btn btn-circle btn-info-subtle" title="View"><i class="fas fa-eye text-info"></i></a>
                                            <a href="@Url.Action("EditStudent", "HR", new { id = student.Id })" class="btn btn-circle btn-warning-subtle" title="Edit"><i class="fas fa-edit text-warning"></i></a>
                                            <form method="post" action="@Url.Action("DeleteStudent", "HR", new { id = student.Id })" onsubmit="return confirmDelete('@student.FullName')" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-circle btn-danger-subtle" title="Delete"><i class="fas fa-trash text-danger"></i></button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-folder-open fa-3x text-light mb-3"></i>
                    <h5 class="text-muted">No student records match your criteria</h5>
                    <button class="btn btn-link" onclick="resetFilters()">Clear all filters</button>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(studentName) {
            return confirm(`Are you sure you want to delete "${studentName}"?\nThis action cannot be undone.`);
        }

        // Logic preserved exactly from your original script
        const searchInput = document.getElementById('searchInput');
        const gradeFilter = document.getElementById('gradeFilter');
        const statusFilter = document.getElementById('statusFilter');

        function filterStudents() {
            const searchTerm = searchInput.value.toLowerCase();
            const gFilter = gradeFilter.value;
            const sFilter = statusFilter.value;
            const rows = document.querySelectorAll('#studentsTable tbody tr');

            rows.forEach(row => {
                const name = row.cells[0].textContent.toLowerCase();
                const studentId = row.querySelector('.badge').textContent.toLowerCase();
                const email = row.cells[1].textContent.toLowerCase();
                const grade = row.getAttribute('data-grade');
                const status = row.getAttribute('data-status');

                let show = true;

                if (searchTerm && !name.includes(searchTerm) && !studentId.includes(searchTerm) && !email.includes(searchTerm)) {
                    show = false;
                }
                if (gFilter && grade !== gFilter) show = false;
                if (sFilter && status !== sFilter) show = false;

                row.style.display = show ? '' : 'none';
            });
        }

        searchInput.addEventListener('keyup', filterStudents);
        gradeFilter.addEventListener('change', filterStudents);
        statusFilter.addEventListener('change', filterStudents);

        function resetFilters() {
            searchInput.value = '';
            gradeFilter.value = '';
            statusFilter.value = '';
            filterStudents();
        }
    </script>
}