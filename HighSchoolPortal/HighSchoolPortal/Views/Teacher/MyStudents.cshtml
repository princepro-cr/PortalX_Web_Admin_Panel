@model IEnumerable<StudentProfile>
@{
    ViewData["Title"] = "My Students";
    var teacherClasses = ViewBag.TeacherClasses as List<string> ?? new List<string>();
    var totalStudents = ViewBag.TotalStudents ?? 0;
    var activeCount = ViewBag.ActiveCount ?? 0;
}

<div class="container-fluid py-4 px-lg-5">
    <!-- Modern Header -->
    <div class="page-header-modern d-flex flex-column flex-md-row justify-content-between align-items-center">
        <div>
            <h1 class="h3 mb-1 text-gradient">My Students</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0" style="font-size: 0.85rem;">
                    <li class="breadcrumb-item"><a href="/Teacher/Dashboard">Teacher Dashboard</a></li>
                    <li class="breadcrumb-item active">Students</li>
                </ol>
            </nav>
        </div>
        <div class="d-flex gap-3 mt-3 mt-md-0">
            <div class="text-end d-none d-lg-block me-3">
                <small class="text-muted d-block">Student Overview</small>
                <span class="fw-bold text-success">@activeCount / @totalStudents Active</span>
            </div>
            <button class="btn btn-teacher-primary rounded-pill px-4 shadow" onclick="refreshStudentData()">
                <i class="fas fa-sync-alt me-2"></i>Refresh Data

            </button>
        </div>
    </div>

    <!-- Stats Grid -->
    <div class="row mb-4 g-3">
        <div class="col-6 col-md-3">
            <div class="mini-stat-card shadow-sm">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <span class="text-muted small fw-bold">TOTAL STUDENTS</span>
                        <h3 class="mb-0 fw-bold">@totalStudents</h3>
                    </div>
                    <div class="bg-light rounded-circle p-2">
                        <i class="fas fa-users text-primary"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="mini-stat-card shadow-sm">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <span class="text-muted small fw-bold">AVG GPA</span>
                        <h3 class="mb-0 fw-bold">@((ViewBag.AverageGPA ?? 0).ToString("0.00"))</h3>
                    </div>
                    <div class="bg-light rounded-circle p-2">
                        <i class="fas fa-chart-line text-success"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="mini-stat-card shadow-sm">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <span class="text-muted small fw-bold">AVG ATTENDANCE</span>
                        <h3 class="mb-0 fw-bold">@(ViewBag.AverageAttendance ?? 0)%</h3>
                    </div>
                    <div class="bg-light rounded-circle p-2">
                        <i class="fas fa-calendar-check text-warning"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="mini-stat-card shadow-sm">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <span class="text-muted small fw-bold">MY CLASSES</span>
                        <h3 class="mb-0 fw-bold">@teacherClasses.Count</h3>
                    </div>
                    <div class="bg-light rounded-circle p-2">
                        <i class="fas fa-school text-info"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="filter-section shadow-sm mb-4">
        <form method="get" action="/Teacher/MyStudents" class="row g-3 align-items-center">
            <div class="col-lg-5">
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0 text-muted">
                        <i class="fas fa-search"></i>
                    </span>
                    <input type="text" class="form-control border-start-0"
                           name="search" value="@ViewBag.SearchTerm"
                           placeholder="Search by name, ID, or email...">
                </div>
            </div>
            <div class="col-md-3 col-lg-2">
                <select class="form-select border-0 shadow-sm" name="grade">
                    <option value="">All Grades</option>
                    <option value="9" selected="@(ViewBag.GradeFilter == "9")">Grade 9</option>
                    <option value="10" selected="@(ViewBag.GradeFilter == "10")">Grade 10</option>
                    <option value="11" selected="@(ViewBag.GradeFilter == "11")">Grade 11</option>
                    <option value="12" selected="@(ViewBag.GradeFilter == "12")">Grade 12</option>
                </select>
            </div>
            <div class="col-md-3 col-lg-2">
                <select class="form-select border-0 shadow-sm" name="classFilter">
                    <option value="">All Classes</option>
                    @foreach (var className in teacherClasses)
                    {
                        <option value="@className" selected="@(ViewBag.ClassFilter == className)">
                            @className
                        </option>
                    }
                </select>
            </div>
            <div class="col-md-2 col-lg-1">
                <button type="submit" class="btn btn-teacher-primary w-100">
                    <i class="fas fa-filter"></i>
                </button>
            </div>
            <div class="col-md-1">
                <a href="/Teacher/MyStudents" class="btn btn-light w-100 border shadow-sm">
                    <i class="fas fa-sync-alt"></i>
                </a>
            </div>
        </form>
    </div>

    <!-- Main Table Card -->
    <div class="card main-card border-0">
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table align-middle mb-0" id="studentsTable">
                        <thead>
                            <tr>
                                <th class="ps-4">Student Profile</th>
                                <th>Academic Info</th>
                                <th>Performance Metrics</th>
                                <th>Status</th>
                                <th class="text-end pe-4">Quick Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var student in Model)
                            {
                                <tr class="student-row" data-grade="@student.GradeLevel">
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <div class="position-relative">
                                                <img src="@student.AvatarUrl"
                                                     class="rounded-3 shadow-sm me-3"
                                                     style="width: 48px; height: 48px; object-fit: cover;"
                                                     onerror="this.src='https://ui-avatars.com/api/?name=@student.FullName&background=random'">
                                            </div>
                                            <div>
                                                <div class="fw-bold text-dark">@student.FullName</div>
                                                <div class="text-muted small">ID: @student.StudentId</div>
                                                <div class="small text-muted">@student.Email</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-info-subtle text-info border mb-1">Class: @student.ClassId</span>
                                        <div class="text-dark fw-bold small">Grade @student.GradeLevel</div>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center gap-3">
                                            <div>
                                                <div class="small text-muted">GPA</div>
                                                <div class="fw-bold">
                                                    <span class="gpa-indicator @(student.GPA >= 3.5m ? "bg-success" : student.GPA >= 2.5m ? "bg-warning" : "bg-danger")"></span>
                                                    @student.GPA.ToString("0.00")
                                                </div>
                                            </div>
                                            <div class="vr mx-2" style="height: 20px;"></div>
                                            <div>
                                                <div class="small text-muted">Attendance</div>
                                                <div class="fw-bold @(student.AttendancePercentage < 75 ? "text-danger" : "")">
                                                    @student.AttendancePercentage%
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @if (student.IsActive)
                                        {
                                            <span class="badge rounded-pill bg-success-subtle text-success px-3">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge rounded-pill bg-danger-subtle text-danger px-3">Inactive</span>
                                        }
                                    </td>
                                    <td class="pe-4">
                                        <div class="d-flex justify-content-end gap-2">
                                            <a href="/Teacher/StudentDetails/@student.Id"
                                               class="btn btn-circle btn-info-subtle"
                                               title="View Details">
                                                <i class="fas fa-eye text-info"></i>
                                            </a>
                                            <a href="/Teacher/AddGrade?studentId=@student.Id"
                                               class="btn btn-circle btn-success-subtle"
                                               title="Add Grade">
                                                <i class="fas fa-graduation-cap text-success"></i>
                                            </a>
                                            <a href="/Teacher/RecordAttendance?studentId=@student.Id"
                                               class="btn btn-circle btn-warning-subtle"
                                               title="Record Attendance">
                                                <i class="fas fa-clipboard-check text-warning"></i>
                                            </a>
                                            <button onclick="markAttendance('@student.Id')"
                                                    class="btn btn-circle btn-primary-subtle"
                                                    title="Quick Attendance">
                                                <i class="fas fa-check text-primary"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (ViewBag.TotalPages > 1)
                {
                    <div class="d-flex justify-content-between align-items-center p-3 border-top">
                        <div class="text-muted small">
                            Showing @Model.Count() of @totalStudents students
                        </div>
                        <nav aria-label="Page navigation">
                            <ul class="pagination mb-0">
                                @if (ViewBag.Page > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link"
                                           href="/Teacher/MyStudents?page=@(ViewBag.Page - 1)&search=@ViewBag.SearchTerm&grade=@ViewBag.GradeFilter&classFilter=@ViewBag.ClassFilter&sortBy=@ViewBag.SortBy">
                                            <i class="fas fa-chevron-left"></i>
                                        </a>
                                    </li>
                                }

                                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                                {
                                    <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                                        <a class="page-link"
                                           href="/Teacher/MyStudents?page=@i&search=@ViewBag.SearchTerm&grade=@ViewBag.GradeFilter&classFilter=@ViewBag.ClassFilter&sortBy=@ViewBag.SortBy">
                                            @i
                                        </a>
                                    </li>
                                }

                                @if (ViewBag.Page < ViewBag.TotalPages)
                                {
                                    <li class="page-item">
                                        <a class="page-link"
                                           href="/Teacher/MyStudents?page=@(ViewBag.Page + 1)&search=@ViewBag.SearchTerm&grade=@ViewBag.GradeFilter&classFilter=@ViewBag.ClassFilter&sortBy=@ViewBag.SortBy">
                                            <i class="fas fa-chevron-right"></i>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    </div>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-user-graduate fa-4x text-light mb-3"></i>
                    <h5 class="text-muted">No students found</h5>
                    <p class="text-muted mb-4">
                        @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                        {
                            <span>No students match your search criteria.</span>
                        }
                        else
                        {
                            <span>You don't have any students assigned to your classes yet.</span>
                        }
                    </p>
                    <a href="/Teacher/MyStudents" class="btn btn-teacher-primary">
                        <i class="fas fa-redo me-2"></i>Clear Filters
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function refreshStudentData() {
            window.location.reload();
        }

        function markAttendance(studentId) {
            const today = new Date().toISOString().split('T')[0];
            const status = prompt('Enter attendance status (Present/Absent/Late):', 'Present');

            if (status) {
                fetch('/Teacher/RecordAttendance', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        studentId: studentId,
                        date: today,
                        status: status
                    })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('Attendance recorded successfully!');
                        location.reload();
                    } else {
                        alert('Error: ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error recording attendance');
                });
            }
        }

        // Add search functionality
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.querySelector('input[name="search"]');
            if (searchInput) {
                searchInput.addEventListener('keyup', function(event) {
                    if (event.key === 'Enter') {
                        this.form.submit();
                    }
                });
            }

            // Add filter functionality similar to Manage Teachers
            const gradeFilter = document.querySelector('select[name="grade"]');
            const classFilter = document.querySelector('select[name="classFilter"]');

            if (gradeFilter) gradeFilter.addEventListener('change', function() {
                this.form.submit();
            });

            if (classFilter) classFilter.addEventListener('change', function() {
                this.form.submit();
            });
        });
    </script>
}