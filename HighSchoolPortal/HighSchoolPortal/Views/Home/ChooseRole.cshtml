@{
    ViewData["Title"] = "Welcome to PortalX";
    var isAuthenticated = User.Identity?.IsAuthenticated == true;
}

<style>
    :root {
        --sidebar-primary: #2c3e50;
        --sidebar-secondary: #1a1a2e 0;
         --sidebar-accent: #3498db;
        --sidebar-light: #ecf0f1;
        --sidebar-hover: #2980b9;
        --primary-color: #2c3e50;
        --secondary-color: #34495e;
        --accent-color: #3498db;
        --success-color: #27ae60;
        --warning-color: #f39c12;
        --danger-color: #e74c3c;
        --light-color: #ecf0f1;
        --dark-color: #2c3e50;
        --bg-gradient: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        --card-shadow: 0 4px 6px rgba(0, 0, 0, 0.07);
        --card-shadow-hover: 0 10px 25px rgba(0, 0, 0, 0.1);
        --transition: all 0.3s ease;
    }

    body {
        background: var(--bg-gradient);
        min-height: 100vh;
        font-family: 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
        color: #333;
    }

    /* Hero Section */
    .portalx-hero {
        background: linear-gradient(135deg, var(--sidebar-primary) 0%, var(--sidebar-secondary) 100%);
        color: white;
        padding: 5rem 0 4rem;
        position: relative;
        overflow: hidden;
        border-radius: 0 0 30px 30px;
        margin-bottom: 3rem;
    }

        .portalx-hero::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url("data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M11 18c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm48 25c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm-43-7c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm63 31c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM34 90c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm56-76c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM12 86c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm28-65c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm23-11c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-6 60c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm29 22c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zM32 63c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm57-13c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-9-21c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM60 91c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM35 41c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM12 60c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2z' fill='%23ffffff' fill-opacity='0.03' fill-rule='evenodd'/%3E%3C/svg%3E");
            opacity: 0.1;
        }

    .portalx-logo {
        width: 120px;
        height: 120px;
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(10px);
        border-radius: 24px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 2rem;
        position: relative;
        border: 1px solid rgba(255, 255, 255, 0.2);
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
    }

        .portalx-logo i {
            font-size: 3.5rem;
            color: white;
        }

    .portalx-title {
        font-size: 3.2rem;
        font-weight: 700;
        margin-bottom: 1rem;
        letter-spacing: -0.5px;
    }

    .portalx-subtitle {
        font-size: 1.25rem;
        opacity: 0.9;
        max-width: 600px;
        margin: 0 auto 2rem;
        line-height: 1.6;
        font-weight: 300;
    }

    /* Stats Section */
    .portalx-stats {
        display: flex;
        justify-content: center;
        gap: 2.5rem;
        margin-top: 3rem;
        flex-wrap: wrap;
    }

    .portalx-stat {
        text-align: center;
        padding: 1.5rem;
        min-width: 140px;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border-radius: 16px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        transition: var(--transition);
    }

        .portalx-stat:hover {
            background: rgba(255, 255, 255, 0.15);
            transform: translateY(-5px);
        }

    .portalx-stat-value {
        font-size: 2.5rem;
        font-weight: 700;
        line-height: 1;
        margin-bottom: 0.5rem;
        color: white;
    }

    .portalx-stat-label {
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        opacity: 0.8;
    }

    /* Role Cards */
    .portalx-role-cards {
        margin-top: 2rem;
    }

    .role-card-container {
        height: 100%;
    }

    .portalx-role-card {
        background: white;
        border-radius: 16px;
        padding: 2.5rem;
        height: 100%;
        transition: var(--transition);
        box-shadow: var(--card-shadow);
        border: 1px solid #e9ecef;
        position: relative;
        overflow: hidden;
    }

        .portalx-role-card:hover {
            transform: translateY(-8px);
            box-shadow: var(--card-shadow-hover);
            border-color: var(--accent-color);
        }

        .portalx-role-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 5px;
            height: 100%;
            background: var(--sidebar-secondary);
        }

    .teacher-card::before {
        background: var(--success-color);
    }

    .hr-card::before {
        background: var(--accent-color);
    }

    .portalx-role-icon {
        width: 70px;
        height: 70px;
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1.5rem;
        color: white;
        font-size: 1.8rem;
        background: var(--sidebar-secondary);
    }

    .teacher-card .portalx-role-icon {
        background: var(--success-color);
    }

    .hr-card .portalx-role-icon {
        background: var(--accent-color);
    }

    .portalx-role-title {
        font-size: 1.75rem;
        font-weight: 600;
        margin-bottom: 1rem;
        color: var(--sidebar-primary);
    }

    .portalx-role-description {
        color: #6c757d;
        margin-bottom: 2rem;
        line-height: 1.6;
        font-size: 1rem;
    }

    /* Feature List */
    .portalx-feature-list {
        list-style: none;
        padding: 0;
        margin: 0 0 2.5rem;
    }

        .portalx-feature-list li {
            padding: 0.85rem 0;
            display: flex;
            align-items: center;
            border-bottom: 1px solid #f1f3f4;
            transition: var(--transition);
        }

            .portalx-feature-list li:last-child {
                border-bottom: none;
            }

            .portalx-feature-list li:hover {
                background: #f8f9fa;
                padding-left: 10px;
            }

    .portalx-feature-icon {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 26px;
        height: 26px;
        border-radius: 6px;
        margin-right: 12px;
        background: var(--light-color);
        color: var(--sidebar-secondary);
        font-size: 0.8rem;
    }

    .teacher-card .portalx-feature-icon {
        background: rgba(39, 174, 96, 0.1);
        color: var(--success-color);
    }

    .hr-card .portalx-feature-icon {
        background: rgba(52, 152, 219, 0.1);
        color: var(--accent-color);
    }

    /* Buttons */
    .portalx-btn {
        padding: 0.875rem 1.75rem;
        border-radius: 10px;
        font-weight: 600;
        font-size: 0.95rem;
        transition: var(--transition);
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        text-decoration: none;
        border: 2px solid transparent;
        cursor: pointer;
        width: 100%;
        margin-bottom: 0.75rem;
    }

    .portalx-btn-primary {
        background: var(--sidebar-secondary);
        color: white;
        border-color: var(--sidebar-secondary);
    }

        .portalx-btn-primary:hover {
            background: var(--sidebar-primary);
            border-color: var(--sidebar-primary);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(44, 62, 80, 0.2);
        }

    .portalx-btn-outline {
        background: transparent;
        color: var(--sidebar-secondary);
        border-color: var(--sidebar-secondary);
    }

        .portalx-btn-outline:hover {
            background: var(--sidebar-secondary);
            color: white;
            transform: translateY(-2px);
        }

    .teacher-card .portalx-btn-primary {
        background: var(--success-color);
        border-color: var(--success-color);
    }

        .teacher-card .portalx-btn-primary:hover {
            background: #219653;
            border-color: #219653;
            box-shadow: 0 5px 15px rgba(39, 174, 96, 0.2);
        }

    .teacher-card .portalx-btn-outline {
        color: var(--success-color);
        border-color: var(--success-color);
    }

        .teacher-card .portalx-btn-outline:hover {
            background: var(--success-color);
            color: white;
        }

    .hr-card .portalx-btn-primary {
        background: var(--accent-color);
        border-color: var(--accent-color);
    }

        .hr-card .portalx-btn-primary:hover {
            background: #2980b9;
            border-color: #2980b9;
            box-shadow: 0 5px 15px rgba(52, 152, 219, 0.2);
        }

    .hr-card .portalx-btn-outline {
        color: var(--accent-color);
        border-color: var(--accent-color);
    }

        .hr-card .portalx-btn-outline:hover {
            background: var(--accent-color);
            color: white;
        }

    /* Welcome Back Section */
    .portalx-welcome-back {
        background: white;
        border-radius: 16px;
        padding: 3rem;
        text-align: center;
        margin-top: 3rem;
        box-shadow: var(--card-shadow);
        border-left: 5px solid var(--success-color);
    }

    .portalx-welcome-icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, var(--sidebar-primary) 0%, var(--sidebar-secondary) 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
        color: white;
        font-size: 2rem;
        box-shadow: 0 10px 20px rgba(44, 62, 80, 0.1);
    }

    .portalx-welcome-back h3 {
        color: var(--sidebar-primary);
        font-weight: 600;
        margin-bottom: 0.75rem;
    }

    .portalx-welcome-back p {
        color: #6c757d;
        margin-bottom: 1.5rem;
        font-size: 1.05rem;
    }

    .portalx-dashboard-btn {
        background: linear-gradient(135deg, var(--sidebar-primary) 0%, var(--sidebar-secondary) 100%);
        color: white;
        padding: 0.875rem 2.5rem;
        border-radius: 10px;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        transition: var(--transition);
        border: none;
    }

        .portalx-dashboard-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(44, 62, 80, 0.2);
            color: white;
        }

    /* Footer Note */
    .portalx-footer-note {
        text-align: center;
        margin-top: 4rem;
        padding: 2rem 0;
        color: #6c757d;
        font-size: 0.9rem;
        border-top: 1px solid #e9ecef;
    }

        .portalx-footer-note a {
            color: var(--accent-color);
            text-decoration: none;
            font-weight: 500;
        }

            .portalx-footer-note a:hover {
                text-decoration: underline;
            }

    /* Responsive Design */
    @@media (max-width: 992px) {
        .portalx-title

    {
        font-size: 2.5rem;
    }

    .portalx-subtitle {
        font-size: 1.1rem;
        padding: 0 1rem;
    }

    .portalx-stats {
        gap: 1.5rem;
    }

    .portalx-stat {
        min-width: 120px;
        padding: 1.25rem;
    }

    }

    @@media (max-width: 768px) {
        .portalx-hero

    {
        padding: 3rem 0;
    }

    .portalx-title {
        font-size: 2rem;
    }

    .portalx-role-card {
        padding: 2rem;
    }

    .portalx-stats {
        flex-direction: column;
        align-items: center;
        gap: 1rem;
    }

    .portalx-stat {
        width: 100%;
        max-width: 250px;
    }

    }

    @@media (max-width: 576px) {
        .portalx-role-card

    {
        padding: 1.5rem;
    }

    .portalx-btn {
        padding: 0.75rem 1.5rem;
    }

    }
</style>

