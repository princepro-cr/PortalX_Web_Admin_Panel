@model RegisterModel
@{
    ViewData["Title"] = "Register";
    var selectedRole = ViewBag.SelectedRole as string ?? "teacher";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg">
                <div class="card-body p-5">
                    <div class="text-center mb-5">
                        <h1 class="h3 mb-3 fw-normal">
                            <i class="fas fa-school text-primary me-2"></i>Staff Portal Registration
                        </h1>
                        <p class="text-muted">Create your staff account</p>

                        @if (!string.IsNullOrEmpty(selectedRole))
                        {
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>
                                Registering as <strong>
                                    @(selectedRole == "hr" ? "HR Staff" : "Teacher")
                                </strong>
                            </div>
                        }
                    </div>

                    @if (!string.IsNullOrEmpty(TempData["SuccessMessage"] as string))
                    {
                        <div class="alert alert-success">
                            <i class="fas fa-check-circle me-2"></i>
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(TempData["ErrorMessage"] as string))
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            @TempData["ErrorMessage"]
                        </div>
                    }

                    <form method="post" asp-action="Register" asp-controller="Auth" id="registrationForm">
                        @Html.AntiForgeryToken()

                        <!-- Hidden Role Field -->
                        <input type="hidden" asp-for="Role" value="@selectedRole" />

                        <!-- Basic Information -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="FullName" class="form-label">Full Name *</label>
                                    <input asp-for="FullName" class="form-control" placeholder="John Doe" required>
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Email" class="form-label">Email Address *</label>
                                    <input asp-for="Email" type="email" class="form-control" placeholder="name@school.edu" required>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Password Fields -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Password" class="form-label">Password *</label>
                                    <input asp-for="Password" type="password" class="form-control" placeholder="At least 6 characters" required>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                    <small class="form-text text-muted">Minimum 6 characters</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ConfirmPassword" class="form-label">Confirm Password *</label>
                                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Re-enter your password" required>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Role Selection -->
                        <div class="mb-4">
                            <h5 class="mb-3 border-bottom pb-2">
                                <i class="fas fa-user-tag me-2 text-primary"></i>Select Role
                            </h5>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="form-check card p-3 h-100 @(selectedRole == "teacher" ? "border-success border-2" : "border")">
                                        <input class="form-check-input" type="radio" name="RoleRadio" id="roleTeacherRadio" value="teacher" @(selectedRole == "teacher" ? "checked" : "")>
                                        <label class="form-check-label w-100" for="roleTeacherRadio">
                                            <div class="d-flex align-items-center mb-2">
                                                <div class="feature-icon-sm bg-success me-3">
                                                    <i class="fas fa-chalkboard-teacher text-white"></i>
                                                </div>
                                                <h6 class="mb-0">Teacher</h6>
                                            </div>
                                            <p class="text-muted small mb-0">For teaching staff to manage classes, grades, and attendance.</p>
                                        </label>
                                    </div>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <div class="form-check card p-3 h-100 @(selectedRole == "hr" ? "border-primary border-2" : "border")">
                                        <input class="form-check-input" type="radio" name="RoleRadio" id="roleHRRadio" value="hr" @(selectedRole == "hr" ? "checked" : "")>
                                        <label class="form-check-label w-100" for="roleHRRadio">
                                            <div class="d-flex align-items-center mb-2">
                                                <div class="feature-icon-sm bg-primary me-3">
                                                    <i class="fas fa-user-tie text-white"></i>
                                                </div>
                                                <h6 class="mb-0">HR Staff</h6>
                                            </div>
                                            <p class="text-muted small mb-0">For administrative staff to manage records and reports.</p>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Teacher Specific Fields -->
                        @if (selectedRole == "teacher")
                        {
                            <div class="mb-4">
                                <h5 class="mb-3 border-bottom pb-2">
                                    <i class="fas fa-chalkboard-teacher me-2 text-success"></i>Teacher Information
                                </h5>

                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="TeacherId" class="form-label">Teacher ID *</label>
                                            <input asp-for="TeacherId" class="form-control" placeholder="e.g., TCH2024001" required>
                                            <span asp-validation-for="TeacherId" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Department" class="form-label">Department *</label>
                                            <select asp-for="Department" class="form-control" required>
                                                <option value="">Select Department</option>
                                                <option value="Mathematics">Mathematics</option>
                                                <option value="Science">Science</option>
                                                <option value="English">English</option>
                                                <option value="History">History</option>
                                                <option value="Arts">Arts</option>
                                                <option value="Physical Education">Physical Education</option>
                                                <option value="Technology">Technology</option>
                                            </select>
                                            <span asp-validation-for="Department" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <div class="form-group">
                                        <label asp-for="Qualification" class="form-label">Qualification *</label>
                                        <input asp-for="Qualification" class="form-control" placeholder="e.g., B.Ed, M.Sc" required>
                                        <span asp-validation-for="Qualification" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        }

                        <!-- HR Specific Fields -->
                        @if (selectedRole == "hr")
                        {
                            <div class="mb-4">
                                <h5 class="mb-3 border-bottom pb-2">
                                    <i class="fas fa-user-tie me-2 text-info"></i>HR Staff Information
                                </h5>

                                <div class="alert alert-info mb-3">
                                    <i class="fas fa-info-circle me-2"></i>
                                    HR Staff accounts require administrative approval.
                                </div>

                                <div class="mb-3">
                                    <div class="form-group">
                                        <label asp-for="EmployeeId" class="form-label">Employee ID *</label>
                                        <input asp-for="EmployeeId" class="form-control" placeholder="e.g., HR001" required>
                                        <span asp-validation-for="EmployeeId" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        }

                        <!-- Optional Fields for All -->
                        <div class="mb-4">
                            <h5 class="mb-3 border-bottom pb-2">
                                <i class="fas fa-address-card me-2 text-secondary"></i>Additional Information (Optional)
                            </h5>

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Phone" class="form-label">Phone Number</label>
                                        <input asp-for="Phone" class="form-control" placeholder="(123) 456-7890">
                                        <span asp-validation-for="Phone" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="DateOfBirth" class="form-label">Date of Birth</label>
                                        <input asp-for="DateOfBirth" type="date" class="form-control">
                                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <div class="form-group">
                                    <label asp-for="Address" class="form-label">Address</label>
                                    <input asp-for="Address" class="form-control" placeholder="123 Main St, City, State">
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid gap-2 mb-4">
                            <button type="submit" class="btn btn-primary btn-lg" id="submitBtn">
                                <i class="fas fa-user-plus me-2"></i>Create Account
                            </button>
                        </div>

                        <div class="text-center">
                            <p class="mb-0">
                                Already have an account?
                                <a href="/Auth/Login?role=@selectedRole" class="text-decoration-none fw-semibold">Sign in here</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Handle role selection via radio buttons
        document.querySelectorAll('input[name="RoleRadio"]').forEach(radio => {
            radio.addEventListener('change', function() {
                const selectedRole = this.value;

                // Update hidden Role field
                document.querySelector('input[name="Role"]').value = selectedRole;

                // Reload page with new role
                window.location.href = `/Auth/Register?role=${selectedRole}`;
            });
        });

        // Form submission handling
        document.getElementById('registrationForm').addEventListener('submit', function(e) {
            // Add loading state
            const submitBtn = document.getElementById('submitBtn');
            if (submitBtn) {
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Creating Account...';
                submitBtn.disabled = true;
            }
        });

        // Conditionally validate fields based on role
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('registrationForm');

            form.addEventListener('submit', function(e) {
                const role = document.querySelector('input[name="Role"]').value;

                if (role === 'teacher') {
                    // Teacher-specific validation
                    const teacherId = document.querySelector('input[name="TeacherId"]');
                    const department = document.querySelector('select[name="Department"]');
                    const qualification = document.querySelector('input[name="Qualification"]');

                    if (!teacherId || !teacherId.value.trim()) {
                        e.preventDefault();
                        alert('Teacher ID is required for teacher registration.');
                        return;
                    }

                    if (!department || !department.value) {
                        e.preventDefault();
                        alert('Department is required for teacher registration.');
                        return;
                    }

                    if (!qualification || !qualification.value.trim()) {
                        e.preventDefault();
                        alert('Qualification is required for teacher registration.');
                        return;
                    }
                }

                if (role === 'hr') {
                    // HR-specific validation
                    const employeeId = document.querySelector('input[name="EmployeeId"]');

                    if (!employeeId || !employeeId.value.trim()) {
                        e.preventDefault();
                        alert('Employee ID is required for HR registration.');
                        return;
                    }
                }
            });
        });
    </script>
}