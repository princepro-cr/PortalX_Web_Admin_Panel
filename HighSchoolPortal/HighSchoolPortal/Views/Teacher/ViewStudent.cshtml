@using HighSchoolPortal.Controllers
@model StudentProfile
@{
    ViewData["Title"] = "Student Details";
    var grades = ViewBag.Grades as IEnumerable<Grade>;
    var attendance = ViewBag.Attendance as IEnumerable<Attendance>;
    var stats = ViewBag.Stats as StudentHRStats;
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-gradient">Student Details</h1>
            <p class="text-muted mb-0">Student ID: @Model.StudentId</p>
        </div>
        <div class="d-flex gap-2">
            <a href="@Url.Action("EditStudent", "HR", new { id = Model.Id })" class="btn btn-warning">
                <i class="fas fa-edit me-2"></i>Edit Student
            </a>
            <a href="@Url.Action("ManageStudents", "HR")" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to List
            </a>
        </div>
    </div>

    <!-- Student Profile -->
    <div class="row">
        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-body text-center">
                    <img src="@Model.AvatarUrl"
                         class="rounded-circle img-fluid"
                         style="width: 150px; height: 150px; object-fit: cover;"
                         onerror="this.src='/images/default-avatar.png'">
                    <h5 class="my-3">@Model.FullName</h5>
                    <p class="text-muted mb-1">Student ID: @Model.StudentId</p>
                    <p class="text-muted mb-1">Grade @Model.GradeLevel</p>
                    <p class="text-muted mb-4">@Model.ClassId</p>

                    <div class="d-flex justify-content-center mb-2">
                        <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger") fs-6">
                            <i class="fas fa-circle me-1" style="font-size: 0.5rem;"></i>
                            @(Model.IsActive ? "Active" : "Inactive")
                        </span>
                    </div>
                </div>
            </div>

            <!-- Contact Information -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Contact Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Email</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.Email</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Phone</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.Phone</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Address</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.Address</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Date of Birth</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.DateOfBirth.ToString("MMMM dd, yyyy")</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Enrollment Date</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.EnrollmentDate.ToString("MMMM dd, yyyy")</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Parent Information -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Parent Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Parent Name</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.ParentName</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Parent Email</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.ParentEmail</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Parent Phone</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.ParentPhone</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Emergency Contact</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.EmergencyContact</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <!-- Performance Statistics -->
            <div class="row mb-4">
                <div class="col-xl-3 col-md-6">
                    <div class="card bg-primary text-white mb-4">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="text-white-50">GPA</h6>
                                    <h4 class="mb-0">@Model.GPA.ToString("0.00")</h4>
                                </div>
                                <i class="fas fa-chart-line fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="card bg-success text-white mb-4">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="text-white-50">Attendance</h6>
                                    <h4 class="mb-0">@Model.AttendancePercentage%</h4>
                                </div>
                                <i class="fas fa-calendar-check fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="card bg-info text-white mb-4">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="text-white-50">Total Grades</h6>
                                    <h4 class="mb-0">@(stats?.TotalGrades ?? 0)</h4>
                                </div>
                                <i class="fas fa-graduation-cap fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="card bg-warning text-white mb-4">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="text-white-50">Days Enrolled</h6>
                                    <h4 class="mb-0">@(stats?.DaysEnrolled ?? 0)</h4>
                                </div>
                                <i class="fas fa-clock fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Grades -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Recent Grades</h5>
                </div>
                <div class="card-body">
                    @if (grades?.Any() == true)
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Subject</th>
                                        <th>Term</th>
                                        <th>Test 1</th>
                                        <th>Test 2</th>
                                        <th>Assignment</th>
                                        <th>Exam</th>
                                        <th>Total</th>
                                        <th>Grade</th>
                                        <th>Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var grade in grades.Take(10))
                                    {
                                        <tr>
                                            <td>@grade.Subject</td>
                                            <td>@grade.Term</td>
                                            <td>@grade.Test1.ToString("0.00")</td>
                                            <td>@grade.Test2.ToString("0.00")</td>
                                            <td>@grade.Assignment.ToString("0.00")</td>
                                            <td>@grade.Exam.ToString("0.00")</td>
                                            <td>
                                                <strong>@grade.TotalScore.ToString("0.00")</strong>
                                            </td>
                                            <td>
                                                <span class="badge @(grade.TotalScore >= 70 ? "bg-success" : grade.TotalScore >= 50 ? "bg-warning" : "bg-danger")">
                                                    @grade.GradeLetter
                                                </span>
                                            </td>
                                            <td>@grade.DateRecorded.ToString("MMM dd, yyyy")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        @if (grades.Count() > 10)
                        {
                            <div class="text-center mt-2">
                                <a href="#" class="btn btn-sm btn-outline-primary">View All Grades</a>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-book fa-3x text-muted mb-3"></i>
                            <h6 class="text-muted">No grades recorded yet</h6>
                        </div>
                    }
                </div>
            </div>

            <!-- Recent Attendance -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Recent Attendance</h5>
                </div>
                <div class="card-body">
                    @if (attendance?.Any() == true)
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Class</th>
                                        <th>Status</th>
                                        <th>Remarks</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var record in attendance.Take(10))
                                    {
                                        <tr>
                                            <td>@record.Date.ToString("MMM dd, yyyy")</td>
                                            <td>@record.ClassName</td>
                                            <td>
                                                <span class="badge @(record.Status == "Present" ? "bg-success" : record.Status == "Late" ? "bg-warning" : "bg-danger")">
                                                    @record.Status
                                                </span>
                                            </td>
                                            <td>@record.Remarks</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        @if (attendance.Count() > 10)
                        {
                            <div class="text-center mt-2">
                                <a href="#" class="btn btn-sm btn-outline-primary">View All Attendance</a>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-calendar fa-3x text-muted mb-3"></i>
                            <h6 class="text-muted">No attendance records yet</h6>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>