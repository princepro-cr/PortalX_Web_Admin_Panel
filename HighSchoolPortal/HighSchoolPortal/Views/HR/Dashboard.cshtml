@{
    ViewData["Title"] = "HR Dashboard";
    var studentCount = ViewBag.StudentCount ?? 0;
    var teacherCount = ViewBag.TeacherCount ?? 0;
    var classCount = ViewBag.ClassCount ?? 0;
    var hrCount = ViewBag.HRCount ?? 1;
    var recentStudents = ViewBag.RecentStudents as List<StudentProfile> ?? new List<StudentProfile>();
}

<div class="dashboard-header animate-fade-in">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="display-5 fw-bold mb-3">HR Administration Dashboard</h1>
                <p class="lead mb-0">Welcome back! Manage your school efficiently</p>
                <small class="opacity-75">
                    <i class="fas fa-clock me-1"></i>
                    Last updated: @DateTime.Now.ToString("MMMM dd, yyyy hh:mm tt")
                </small>
            </div>
            <div class="col-md-4 text-center">
                <div class="position-relative">
                    <i class="fas fa-user-tie fa-7x opacity-25"></i>
                    <div class="position-absolute top-50 start-50 translate-middle">
                        <span class="badge bg-light text-dark fs-6 px-3 py-2">HR Admin</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mt-4">
    <!-- Statistics Cards -->
    <div class="row g-4 mb-5">
        <div class="col-md-3">
            <div class="card stat-card">
                <div class="card-body text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-user-graduate"></i>
                    </div>
                    <h3 class="stat-number">@studentCount</h3>
                    <p class="stat-label">Total Students</p>
                    <small class="text-muted">Enrolled in school</small>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card stat-card">
                <div class="card-body text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-chalkboard-teacher"></i>
                    </div>
                    <h3 class="stat-number">@teacherCount</h3>
                    <p class="stat-label">Total Teachers</p>
                    <small class="text-muted">Teaching staff</small>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card stat-card">
                <div class="card-body text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-school"></i>
                    </div>
                    <h3 class="stat-number">@classCount</h3>
                    <p class="stat-label">Total Classes</p>
                    <small class="text-muted">Active classes</small>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card stat-card">
                <div class="card-body text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-users-cog"></i>
                    </div>
                    <h3 class="stat-number">@hrCount</h3>
                    <p class="stat-label">HR Staff</p>
                    <small class="text-muted">Administrators</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-bolt me-2"></i>Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <a href="/HR/ManageStudents" class="btn btn-primary w-100 py-3">
                                <i class="fas fa-user-graduate fa-2x mb-2"></i><br>
                                Manage Students
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="/HR/ManageTeachers" class="btn btn-success w-100 py-3">
                                <i class="fas fa-chalkboard-teacher fa-2x mb-2"></i><br>
                                Manage Teachers
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="/HR/GenerateReport" class="btn btn-info w-100 py-3">
                                <i class="fas fa-chart-bar fa-2x mb-2"></i><br>
                                Generate Reports
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="/HR/AddStudent" class="btn btn-warning w-100 py-3">
                                <i class="fas fa-user-plus fa-2x mb-2"></i><br>
                                Add New Student
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Students -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-0"><i class="fas fa-user-graduate me-2"></i>Recent Students</h5>
                        <p class="text-muted mb-0">Recently added students</p>
                    </div>
                    <a href="/HR/ManageStudents" class="btn btn-outline-primary btn-sm">
                        View All <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
                <div class="card-body">
                    @if (recentStudents.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Student ID</th>
                                        <th>Name</th>
                                        <th>Grade</th>
                                        <th>Class</th>
                                        <th>GPA</th>
                                        <th>Attendance</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var student in recentStudents)
                                    {
                                        <tr>
                                            <td><strong>@student.StudentId</strong></td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <img src="@student.AvatarUrl"
                                                         class="rounded-circle me-2"
                                                         style="width: 32px; height: 32px;"
                                                         onerror="this.src='/images/default-avatar.png'">
                                                    @student.FullName
                                                </div>
                                            </td>
                                            <td><span class="badge bg-secondary">Grade @student.GradeLevel</span></td>
                                            <td>@student.ClassId</td>
                                           @* <td>
                                                <span class="badge @(student.GPA >= 3.5 ? "bg-success" : student.GPA >= 2.5 ? "bg-warning" : "bg-danger")">
                                                    @student.GPA.ToString("0.00")
                                                </span>
                                            </td>*@
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="progress flex-grow-1 me-2" style="height: 6px;">
                                                        <div class="progress-bar @(student.AttendancePercentage >= 90 ? "bg-success" : student.AttendancePercentage >= 75 ? "bg-warning" : "bg-danger")"
                                                             style="width: @student.AttendancePercentage%"></div>
                                                    </div>
                                                    <small>@student.AttendancePercentage%</small>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a href="/HR/ViewStudent/@student.Id"
                                                       class="btn btn-info"
                                                       title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="/HR/EditStudent/@student.Id"
                                                       class="btn btn-warning"
                                                       title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-user-graduate fa-4x text-muted mb-3"></i>
                            <h5 class="text-muted">No Students Found</h5>
                            <p class="text-muted mb-4">Start by adding students to your school</p>
                            <a href="/HR/AddStudent" class="btn btn-primary">
                                <i class="fas fa-user-plus me-2"></i>Add First Student
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Animate statistics numbers
        document.addEventListener('DOMContentLoaded', function() {
            const statNumbers = document.querySelectorAll('.stat-number');
            statNumbers.forEach(element => {
                const target = parseInt(element.textContent);
                if (!isNaN(target)) {
                    let current = 0;
                    const increment = target / 50;
                    const timer = setInterval(() => {
                        current += increment;
                        if (current >= target) {
                            element.textContent = target;
                            clearInterval(timer);
                        } else {
                            element.textContent = Math.floor(current);
                        }
                    }, 30);
                }
            });
        });
    </script>
}