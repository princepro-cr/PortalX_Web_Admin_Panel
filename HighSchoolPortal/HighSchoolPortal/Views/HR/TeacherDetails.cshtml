@using HighSchoolPortal.Controllers
@model TeacherProfile
@{
    ViewData["Title"] = "Teacher Details";
    var teacherStudents = ViewBag.TeacherStudents as IEnumerable<StudentProfile>;
    var stats = ViewBag.Stats as TeacherHRStats;
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-gradient">Teacher Details</h1>
            <p class="text-muted mb-0">Teacher ID: @Model.TeacherId</p>
        </div>
        <div class="d-flex gap-2">
            <!-- Assign Subjects Button -->
            <a href="/HR/AssignTeacherSubjects?id=@Model.Id" class="btn btn-primary">
                <i class="fas fa-tasks me-2"></i>Assign Subjects & Classes
            </a>

            <!-- Edit Teacher Button -->
            <a href="@Url.Action("EditTeacher", "HR", new { id = Model.Id })" class="btn btn-warning">
                <i class="fas fa-edit me-2"></i>Edit Teacher
            </a>

            <!-- Delete Teacher Button -->
            <form asp-action="DeleteTeacher" asp-controller="HR" asp-route-id="@Model.Id"
                  method="post" class="d-inline"
                  onsubmit="return confirm('Are you sure you want to delete this teacher?');">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-outline-danger">
                    <i class="fas fa-trash me-2"></i>Delete
                </button>
            </form>

            <!-- Back to List Button -->
            <a href="@Url.Action("ManageTeachers", "HR")" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to List
            </a>
        </div>
    </div>

    <!-- Teacher Profile -->
    <div class="row">
        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-body text-center">
                    <img src="@Model.AvatarUrl"
                         class="rounded-circle img-fluid"
                         style="width: 150px; height: 150px; object-fit: cover;"
                         onerror="this.src='/images/default-avatar.png'">
                    <h5 class="my-3">@Model.FullName</h5>
                    <p class="text-muted mb-1">@Model.Department Department</p>
                    <p class="text-muted mb-4">@Model.Qualification</p>

                    <div class="d-flex justify-content-center mb-2">
                        <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger") fs-6">
                            <i class="fas fa-circle me-1" style="font-size: 0.5rem;"></i>
                            @(Model.IsActive ? "Active" : "Inactive")
                        </span>
                        @if (Model.IsHeadOfDepartment)
                        {
                            <span class="badge bg-info ms-2 fs-6">
                                <i class="fas fa-crown me-1"></i>Head of Department
                            </span>
                        }
                    </div>

                    <!-- Assignment Summary -->
                    <div class="mt-3">
                        @if (Model.Classes?.Any() == true || Model.Subjects?.Any() == true)
                        {
                            <div class="d-flex flex-column gap-2">
                                @if (Model.Classes?.Any() == true)
                                {
                                    <div>
                                        <small class="text-muted">Classes Assigned:</small>
                                        <div class="mt-1">
                                            @foreach (var className in Model.Classes.Take(3))
                                            {
                                                <span class="badge bg-secondary me-1">@className</span>
                                            }
                                            @if (Model.Classes.Count > 3)
                                            {
                                                <span class="badge bg-light text-dark">+@(Model.Classes.Count - 3) more</span>
                                            }
                                        </div>
                                    </div>
                                }

                                @if (Model.Subjects?.Any() == true)
                                {
                                    <div>
                                        <small class="text-muted">Subjects Assigned:</small>
                                        <div class="mt-1">
                                            @foreach (var subject in Model.Subjects.Take(3))
                                            {
                                                <span class="badge bg-primary me-1">@subject</span>
                                            }
                                            @if (Model.Subjects.Count > 3)
                                            {
                                                <span class="badge bg-light text-dark">+@(Model.Subjects.Count - 3) more</span>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-warning py-2 px-3 mt-3">
                                <i class="fas fa-exclamation-triangle me-1"></i>
                                <small>No classes or subjects assigned</small>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Contact Information -->
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Contact Information</h5>
                    <a href="/HR/AssignTeacherSubjects?id=@Model.Id" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-plus me-1"></i>Assign More
                    </a>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Email</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.Email</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Phone</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.Phone</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Address</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.Address</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Date of Birth</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.DateOfBirth.ToString("MMMM dd, yyyy")</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Hire Date</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.HireDate.ToString("MMMM dd, yyyy")</p>
                            <small class="text-muted">
                                (@((DateTime.Now - Model.HireDate).Days / 365) years experience)
                            </small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Subjects -->
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Subjects</h5>
                    <span class="badge @(Model.Subjects?.Any() == true ? "bg-primary" : "bg-secondary")">
                        @(Model.Subjects?.Count ?? 0) subjects
                    </span>
                </div>
                <div class="card-body">
                    @if (Model.Subjects?.Any() == true)
                    {
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var subject in Model.Subjects)
                            {
                                <span class="badge bg-primary px-3 py-2 d-flex align-items-center">
                                    <i class="fas fa-book-open me-1"></i>@subject
                                </span>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-3">
                            <i class="fas fa-book fa-2x text-muted mb-2"></i>
                            <p class="text-muted mb-2">No subjects assigned</p>
                            <a href="/HR/AssignTeacherSubjects?id=@Model.Id" class="btn btn-sm btn-primary">
                                <i class="fas fa-plus me-1"></i>Assign Subjects
                            </a>
                        </div>
                    }
                </div>
            </div>

            <!-- Classes -->
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Classes</h5>
                    <span class="badge @(Model.Classes?.Any() == true ? "bg-secondary" : "bg-secondary")">
                        @(Model.Classes?.Count ?? 0) classes
                    </span>
                </div>
                <div class="card-body">
                    @if (Model.Classes?.Any() == true)
                    {
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var className in Model.Classes)
                            {
                                <div class="class-card">
                                    <span class="badge bg-secondary px-3 py-2 d-flex align-items-center">
                                        <i class="fas fa-school me-1"></i>@className
                                    </span>
                                    @if (teacherStudents?.Any(s => s.ClassId == className) == true)
                                    {
                                        <small class="text-muted d-block mt-1">
                                            @teacherStudents.Count(s => s.ClassId == className) students
                                        </small>
                                    }
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-3">
                            <i class="fas fa-school fa-2x text-muted mb-2"></i>
                            <p class="text-muted mb-2">No classes assigned</p>
                            <a href="/HR/AssignTeacherSubjects?id=@Model.Id" class="btn btn-sm btn-primary">
                                <i class="fas fa-plus me-1"></i>Assign Classes
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <!-- Performance Statistics -->
            <div class="row mb-4">
                <div class="col-xl-3 col-md-6">
                    <div class="card bg-primary text-white mb-4">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="text-white-50">Total Students</h6>
                                    <h4 class="mb-0">@(stats?.TotalStudents ?? 0)</h4>
                                </div>
                                <i class="fas fa-users fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="card bg-success text-white mb-4">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="text-white-50">Total Classes</h6>
                                    <h4 class="mb-0">@(stats?.TotalClasses ?? 0)</h4>
                                </div>
                                <i class="fas fa-chalkboard-teacher fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="card bg-info text-white mb-4">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="text-white-50">Avg Student GPA</h6>
                                    <h4 class="mb-0">@(stats?.AverageStudentGPA.ToString("0.00") ?? "0.00")</h4>
                                </div>
                                <i class="fas fa-graduation-cap fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="card bg-warning text-white mb-4">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="text-white-50">Avg Attendance</h6>
                                    <h4 class="mb-0">@(stats?.AverageStudentAttendance ?? 0)%</h4>
                                </div>
                                <i class="fas fa-calendar-check fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Teacher's Students -->
            <div class="card mb-4">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Students</h5>
                        <div>
                            <span class="badge bg-primary">@(teacherStudents?.Count() ?? 0) students</span>
                            @if (Model.Classes?.Any() == true)
                            {
                                <span class="badge bg-info ms-2">@(Model.Classes.Count) classes</span>
                            }
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @if (teacherStudents?.Any() == true)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Student ID</th>
                                        <th>Name</th>
                                        <th>Grade</th>
                                        <th>Class</th>
                                        <th>GPA</th>
                                        <th>Attendance</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var student in teacherStudents)
                                    {
                                        <tr>
                                            <td>@student.StudentId</td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <img src="@student.AvatarUrl"
                                                         class="rounded-circle me-2"
                                                         style="width: 30px; height: 30px;"
                                                         onerror="this.src='/images/default-avatar.png'">
                                                    <div>@student.FullName</div>
                                                </div>
                                            </td>
                                            <td>Grade @student.GradeLevel</td>
                                            <td>
                                                <span class="badge bg-secondary">@student.ClassId</span>
                                            </td>
                                            <td>
                                                <span class="badge @(student.GPA >= 3.5m ? "bg-success" : student.GPA >= 2.5m ? "bg-warning" : "bg-danger")">
                                                    @student.GPA.ToString("0.00")
                                                </span>
                                            </td>
                                            <td>
                                                <span class="badge @(student.AttendancePercentage >= 90 ? "bg-success" : student.AttendancePercentage >= 75 ? "bg-warning" : "bg-danger")">
                                                    @student.AttendancePercentage%
                                                </span>
                                            </td>
                                            <td>
                                                <span class="badge @(student.IsActive ? "bg-success" : "bg-danger")">
                                                    @(student.IsActive ? "Active" : "Inactive")
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Class Distribution -->
                        @if (Model.Classes?.Any() == true)
                        {
                            <div class="mt-4">
                                <h6>Student Distribution by Class</h6>
                                <div class="row">
                                    @foreach (var className in Model.Classes)
                                    {
                                        var classStudentCount = teacherStudents.Count(s => s.ClassId == className);
                                        <div class="col-md-3 mb-3">
                                            <div class="card">
                                                <div class="card-body text-center">
                                                    <h5 class="card-title">@className</h5>
                                                    <h3 class="text-primary">@classStudentCount</h3>
                                                    <p class="text-muted mb-0">students</p>
                                                    <a href="/HR/ManageStudents?classFilter=@className"
                                                       class="btn btn-sm btn-outline-primary mt-2">
                                                        <i class="fas fa-eye me-1"></i>View Students
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-user-graduate fa-3x text-muted mb-3"></i>
                            <h6 class="text-muted">No students assigned to this teacher's classes</h6>
                            <p class="text-muted small mb-3">
                                Students will appear here once they are enrolled in the teacher's assigned classes.
                            </p>
                            <a href="/HR/AssignTeacherSubjects?id=@Model.Id" class="btn btn-primary">
                                <i class="fas fa-tasks me-2"></i>Assign Classes to View Students
                            </a>
                        </div>
                    }
                </div>
            </div>

            <!-- Additional Information -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Additional Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">Specialization</label>
                                <p class="mb-0">@Model.Specialization</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">Employee ID</label>
                                <p class="mb-0">@Model.EmployeeId</p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">Created At</label>
                                <p class="mb-0">@Model.CreatedAt.ToString("MMMM dd, yyyy HH:mm")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">Last Updated</label>
                                <p class="mb-0">@Model.UpdatedAt.ToString("MMMM dd, yyyy HH:mm")</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .class-card {
        position: relative;
        display: inline-block;
        margin: 5px;
    }

    .btn-primary {
        background: linear-gradient(135deg, #4361ee 0%, #3a56d4 100%);
        border: none;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #3a56d4 0%, #3046bc 100%);
            transform: translateY(-1px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
</style>