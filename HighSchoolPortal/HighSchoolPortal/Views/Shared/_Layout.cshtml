    <!-- Custom JavaScript -->
    <script>
        // Sidebar toggle functionality
        document.addEventListener('DOMContentLoaded', function() {
            const sidebar = document.getElementById('sidebar');
            const mainContent = document.getElementById('mainContent');
            const sidebarToggle = document.getElementById('sidebarToggle');
            const mobileSidebarToggle = document.getElementById('mobileSidebarToggle');

            // Load sidebar state from localStorage
            const isCollapsed = localStorage.getItem('sidebarCollapsed') === 'true';
            if (isCollapsed) {
                sidebar.classList.add('collapsed');
                mainContent.classList.add('expanded');
            }

            // Desktop sidebar toggle
            sidebarToggle.addEventListener('click', function() {
                sidebar.classList.toggle('collapsed');
                mainContent.classList.toggle('expanded');
                localStorage.setItem('sidebarCollapsed', sidebar.classList.contains('collapsed'));

                // Add animation class
                sidebar.style.animation = 'none';
                setTimeout(() => {
                    sidebar.style.animation = 'slideIn 0.3s ease';
                }, 10);
            });

            // Mobile sidebar toggle
            mobileSidebarToggle.addEventListener('click', function() {
                sidebar.classList.toggle('collapsed');
                mainContent.classList.toggle('expanded');
                localStorage.setItem('sidebarCollapsed', sidebar.classList.contains('collapsed'));

                // Add animation class
                sidebar.style.animation = 'none';
                setTimeout(() => {
                    sidebar.style.animation = 'slideIn 0.3s ease';
                }, 10);
            });

            // Auto-collapse on mobile
            function handleResize() {
                if (window.innerWidth <= 768) {
                    if (!sidebar.classList.contains('collapsed')) {
                        sidebar.classList.add('collapsed');
                        mainContent.classList.add('expanded');
                    }
                } else {
                    // Restore saved state on desktop
                    const isCollapsed = localStorage.getItem('sidebarCollapsed') === 'true';
                    if (isCollapsed) {
                        sidebar.classList.add('collapsed');
                        mainContent.classList.add('expanded');
                    } else {
                        sidebar.classList.remove('collapsed');
                        mainContent.classList.remove('expanded');
                    }
                }
            }

            window.addEventListener('resize', handleResize);
            handleResize(); // Initial check

            // Load role-based counts
            loadRoleBasedCounts();

            // Add animation for page transitions
            document.body.style.opacity = '0';
            document.body.style.transition = 'opacity 0.3s ease';
            setTimeout(() => {
                document.body.style.opacity = '1';
            }, 100);
        });

        function loadRoleBasedCounts() {
            const userRole = '@userRole';

            if (userRole === 'teacher') {
                // Load teacher's student count
                $.ajax({
                    url: '/Teacher/GetStudentCount',
                    type: 'GET',
                    success: function(data) {
                        if (data && data.count > 0) {
                            $('#studentCountBadge').text(data.count).addClass('animate-pulse-subtle').show();
                        }
                    }
                });
            } else if (userRole === 'hr') {
                // Load HR student count
                $.ajax({
                    url: '/HR/GetStudentCount',
                    type: 'GET',
                    success: function(data) {
                        if (data && data.count > 0) {
                            $('#hrStudentCountBadge').text(data.count).addClass('animate-pulse-subtle').show();
                        }
                    }
                });

                // Load HR teacher count
                $.ajax({
                    url: '/HR/GetTeacherCount',
                    type: 'GET',
                    success: function(data) {
                        if (data && data.count > 0) {
                            $('#teacherCountBadge').text(data.count).addClass('animate-pulse-subtle').show();
                        }
                    }
                });
            }
        }

        // Initialize tooltips
        $(document).ready(function() {
            $('[data-bs-toggle="tooltip"]').tooltip();

            // Enhanced auto-dismiss alerts
            $('.alert').each(function() {
                const alert = $(this);
                setTimeout(function() {
                    alert.fadeOut(500, function() {
                        $(this).alert('close');
                    });
                }, 5000);
            });

            // Enhanced smooth scrolling
            $('a[href^="#"]').on('click', function(event) {
                if (this.hash !== "") {
                    event.preventDefault();
                    const hash = this.hash;
                    $('html, body').animate({
                        scrollTop: $(hash).offset().top - 100
                    }, 800, 'easeInOutCubic');
                }
            });

            // Add hover effects to cards
            $('.card').hover(
                function() {
                    $(this).addClass('shadow-lg');
                },
                function() {
                    $(this).removeClass('shadow-lg');
                }
            );

            // Add click effect to buttons
            $('.btn').on('click', function() {
                $(this).addClass('active');
                setTimeout(() => {
                    $(this).removeClass('active');
                }, 300);
            });
        });

        // Format numbers with commas
        function formatNumber(num) {
            return num.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
        }

        // Calculate grade based on score
        function calculateGrade(score) {
            if (score >= 90) return 'A';
            if (score >= 80) return 'B';
            if (score >= 70) return 'C';
            if (score >= 60) return 'D';
            return 'F';
        }

        // Get grade color class with enhanced styling
        function getGradeClass(score) {
            if (score >= 90) return 'grade-a badge bg-success';
            if (score >= 80) return 'grade-b badge bg-primary';
            if (score >= 70) return 'grade-c badge bg-warning text-dark';
            if (score >= 60) return 'grade-d badge bg-orange';
            return 'grade-f badge bg-danger';
        }

        // Add CSS for smooth animations
        const style = document.createElement('style');
        style.textContent = `
            @@keyframes slideIn {
                from { transform: translateX(-100%); }
                to { transform: translateX(0); }
            }

            .btn.active {
                transform: scale(0.95);
                transition: transform 0.1s;
            }

            .bg-orange {
                background-color: #fd7e14 !important;
            }

            .easeInOutCubic {
                transition-timing-function: cubic-bezier(0.645, 0.045, 0.355, 1);
            }
        `;
        document.head.appendChild(style);
    </script>

