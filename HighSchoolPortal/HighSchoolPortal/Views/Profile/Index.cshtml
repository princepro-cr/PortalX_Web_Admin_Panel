@model UserProfile
@{
    ViewData["Title"] = "My Profile";
    var isTeacher = Model.Role == "teacher";
    var isStudent = Model.Role == "student";
    var isHR = Model.Role == "hr";
}

<div class="container-fluid px-4">
    <!-- Profile Header -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-auto">
                    <img src="@Model.AvatarUrl"
                         class="rounded-circle border border-4 border-white"
                         style="width: 120px; height: 120px; object-fit: cover;"
                         onerror="this.src='/images/default-avatar.png'">
                </div>
                <div class="col">
                    <h1 class="h2 mb-1">@Model.FullName</h1>
                    <p class="text-muted mb-2">
                        <span class="badge bg-primary">@Model.Role.ToUpper()</span>
                        <span class="mx-2">•</span>
                        <i class="fas fa-envelope me-1"></i>@Model.Email
                        @if (!string.IsNullOrEmpty(Model.Phone))
                        {
                            <span class="mx-2">•</span>
                            <i class="fas fa-phone me-1"></i>

                            @Model.Phone
                        }
                    </p>
                    <p class="text-muted mb-0">
                        <i class="fas fa-calendar me-1"></i>
                        Member since: @Model.CreatedAt.ToString("MMMM dd, yyyy")
                        <span class="mx-2">•</span>
                        <i class="fas fa-circle @(Model.IsActive ? "text-success" : "text-danger") me-1"></i>
                        @(Model.IsActive ? "Active" : "Inactive")
                    </p>
                </div>
                <div class="col-auto">
                    <a href="/Profile/Edit" class="btn btn-primary">
                        <i class="fas fa-edit me-1"></i>Edit Profile
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Left Column: Personal Information -->
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-user me-2"></i>Personal Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="small text-muted d-block">Full Name</label>
                                <p class="mb-2">@Model.FullName</p>
                            </div>

                            <div class="mb-3">
                                <label class="small text-muted d-block">Email Address</label>
                                <p class="mb-2">@Model.Email</p>
                            </div>

                            <div class="mb-3">
                                <label class="small text-muted d-block">Phone Number</label>
                                <p class="mb-2">@(string.IsNullOrEmpty(Model.Phone) ? "Not provided" : Model.Phone)</p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="small text-muted d-block">Address</label>
                                <p class="mb-2">@(string.IsNullOrEmpty(Model.Address) ? "Not provided" : Model.Address)</p>
                            </div>

                            <div class="mb-3">
                                <label class="small text-muted d-block">Date of Birth</label>
                                <p class="mb-2">@Model.DateOfBirth.ToString("MMMM dd, yyyy")</p>
                            </div>

                            <div class="mb-3">
                                <label class="small text-muted d-block">Account Status</label>
                                <p class="mb-2">
                                    <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger")">
                                        @(Model.IsActive ? "Active" : "Inactive")
                                    </span>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Additional Information based on role -->
            @if (isTeacher)
            {
                var teacher = Model as TeacherProfile;
                if (teacher != null)
                {
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-chalkboard-teacher me-2"></i>Teacher Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="small text-muted d-block">Teacher ID</label>
                                        <p class="mb-2">@teacher.TeacherId</p>
                                    </div>

                                    <div class="mb-3">
                                        <label class="small text-muted d-block">Department</label>
                                        <p class="mb-2">@teacher.Department</p>
                                    </div>

                                    <div class="mb-3">
                                        <label class="small text-muted d-block">Qualification</label>
                                        <p class="mb-2">@teacher.Qualification</p>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="small text-muted d-block">Specialization</label>
                                        <p class="mb-2">@teacher.Specialization</p>
                                    </div>

                                    <div class="mb-3">
                                        <label class="small text-muted d-block">Hire Date</label>
                                        <p class="mb-2">@teacher.HireDate.ToString("MMMM dd, yyyy")</p>
                                    </div>

                                    <div class="mb-3">
                                        <label class="small text-muted d-block">Head of Department</label>
                                        <p class="mb-2">
                                            @if (teacher.IsHeadOfDepartment)
                                            {
                                                <span class="badge bg-success">Yes</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">No</span>
                                            }
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <!-- Subjects and Classes -->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="small text-muted d-block">Subjects Teaching</label>
                                        @if (teacher.Subjects?.Any() == true)
                                        {
                                            <div class="d-flex flex-wrap gap-1">
                                                @foreach (var subject in teacher.Subjects)
                                                {
                                                    <span class="badge bg-primary">@subject</span>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <p class="text-muted mb-0">No subjects assigned</p>
                                        }
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="small text-muted d-block">Classes Assigned</label>
                                        @if (teacher.Classes?.Any() == true)
                                        {
                                            <div class="d-flex flex-wrap gap-1">
                                                @foreach (var cls in teacher.Classes)
                                                {
                                                    <span class="badge bg-info">@cls</span>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <p class="text-muted mb-0">No classes assigned</p>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else if (isStudent)
            {
                var student = Model as StudentProfile;
                if (student != null)
                {
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-user-graduate me-2"></i>Student Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="small text-muted d-block">Student ID</label>
                                        <p class="mb-2">@student.StudentId</p>
                                    </div>

                                    <div class="mb-3">
                                        <label class="small text-muted d-block">Grade Level</label>
                                        <p class="mb-2">@student.GradeLevel</p>
                                    </div>

                                    <div class="mb-3">
                                        <label class="small text-muted d-block">Class</label>
                                        <p class="mb-2">@student.ClassId</p>
                                    </div>

                                    <div class="mb-3">
                                        <label class="small text-muted d-block">Current GPA</label>
                                        <p class="mb-2">
                                           @* <span class="badge @(student.GPA >= 3.5 ? "bg-success" : student.GPA >= 2.5 ? "bg-warning" : "bg-danger")">
                                                @student.GPA.ToString("0.00")
                                            </span>*@
                                        </p>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="small text-muted d-block">Attendance</label>
                                        <p class="mb-2">
                                            <span class="badge @(student.AttendancePercentage >= 90 ? "bg-success" : student.AttendancePercentage >= 75 ? "bg-warning" : "bg-danger")">
                                                @student.AttendancePercentage%
                                            </span>
                                        </p>
                                    </div>

                                    <div class="mb-3">
                                        <label class="small text-muted d-block">Enrollment Date</label>
                                        <p class="mb-2">@student.EnrollmentDate.ToString("MMMM dd, yyyy")</p>
                                    </div>

                                    <div class="mb-3">
                                        <label class="small text-muted d-block">Parent Name</label>
                                        <p class="mb-2">@(string.IsNullOrEmpty(student.ParentName) ? "Not provided" : student.ParentName)</p>
                                    </div>

                                    <div class="mb-3">
                                        <label class="small text-muted d-block">Emergency Contact</label>
                                        <p class="mb-2">@(string.IsNullOrEmpty(student.EmergencyContact) ? "Not provided" : student.EmergencyContact)</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>

        <!-- Right Column: Account Info & Quick Actions -->
        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-cog me-2"></i>Account Settings</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="/Profile/Edit" class="btn btn-outline-primary text-start">
                            <i class="fas fa-edit me-2"></i>Edit Profile
                        </a>
                        <a href="/Auth/ChangePassword" class="btn btn-outline-secondary text-start">
                            <i class="fas fa-key me-2"></i>Change Password
                        </a>
                        @if (isTeacher)
                        {
                            <a href="/Teacher/Dashboard" class="btn btn-outline-success text-start">
                                <i class="fas fa-tachometer-alt me-2"></i>Teacher Dashboard
                            </a>
                        }
                        else if (isStudent)
                        {
                            <a href="/Student/Dashboard" class="btn btn-outline-success text-start">
                                <i class="fas fa-tachometer-alt me-2"></i>Student Dashboard
                            </a>
                        }
                        else if (isHR)
                        {
                            <a href="/HR/Dashboard" class="btn btn-outline-success text-start">
                                <i class="fas fa-tachometer-alt me-2"></i>HR Dashboard
                            </a>
                        }
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-chart-line me-2"></i>Account Activity</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="small text-muted d-block">Account Created</label>
                        <p class="mb-2">@Model.CreatedAt.ToString("MMMM dd, yyyy h:mm tt")</p>
                    </div>

                    <div class="mb-3">
                        <label class="small text-muted d-block">Last Updated</label>
                        <p class="mb-2">@Model.UpdatedAt.ToString("MMMM dd, yyyy h:mm tt")</p>
                    </div>

                    <div class="mb-3">
                        <label class="small text-muted d-block">Last Login</label>
                        <p class="mb-0">@DateTime.Now.ToString("MMMM dd, yyyy h:mm tt")</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add confirmation for sensitive actions
            $('.btn-danger').click(function(e) {
                if (!confirm('Are you sure you want to perform this action?')) {
                    e.preventDefault();
                }
            });
        });
    </script>
}